<AnchorPane prefHeight="300.0" prefWidth="500.0" styleClass="root" stylesheets="@gui.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="practice.Staff">
   <children>
      <StackPane fx:id="stackPane" layoutX="56.0" prefHeight="300.0" prefWidth="394.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="56.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" prefHeight="300.0" prefWidth="448.0" spacing="20.0">
               <children>
                  <Label text="Enter Staff details">
                     <font>
                        <Font name="Arial Black" size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="staffName" promptText="Enter staff Name" />
                  <TextField fx:id="staffemail" promptText="Enter emailID" />
                  <Label fx:id="info" text="Enter all the fields">
                     <font>
                        <Font name="Arial Black" size="13.0" />
                     </font></Label>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
                     <children>
                        <Button fx:id="saveStaff" mnemonicParsing="false" onAction="#staffLogin" text="Proceed">
                           <font>
                              <Font name="Arial Black" size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="back" mnemonicParsing="false" onAction="#backbtn" prefHeight="32.0" prefWidth="70.0" text="Back">
                           <font>
                              <Font name="Arial Black" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </VBox>
         </children>
